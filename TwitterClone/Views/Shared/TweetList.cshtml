@model List<TwitterClone.Models.TweetFollowingViewModel>
<div style="margin:10px;">
    <h3>Tweets</h3>
    <div class="container fluid">
        <div class="col-md-12">
            <table id="tblTweets" class="table table-responsive table-hover">                
                <tbody>
                    @if (Model != null && Model.Count > 0)
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                @*<td>@Html.HiddenFor(modelitem=>item.TweetUserId)</td>*@
                                <td>@Html.DisplayFor(modelItem => item.TweetUser)</td>
                                <td>@Html.DisplayFor(modelItem => item.TweetMessage)</td>
                                <td>@Html.DisplayFor(modelItem => item.CreatedOn)</td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
