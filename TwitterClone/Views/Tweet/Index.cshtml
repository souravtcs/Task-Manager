@model TwitterClone.Models.TweetMasterModel
@{
    ViewBag.Title = "TwitterMaster";
}

@*<h2>TwitterMaster</h2>*@
<div id="wrapper">
    <!-- Sidebar -->
    <div id="sidebar-wrapper">
        @Html.Partial("Follower", Model.Follow)
    </div>
    <!-- /#sidebar-wrapper -->
    <!-- Page Content -->
    <div id="page-content-wrapper">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12">
                    <div class="navbar-collapse collapse">
                        @*<h3>Welcome @Model.LoggedInUserName</h3>*@
                        <ul class="nav navbar-nav" style="float:right;">       
                            <li style="height:50px;padding:15px;"><strong>Welcome @Model.LoggedInUserName</strong></li>
                            <li>@Html.ActionLink("Home", "Index", "Tweet")</li>
                            <li>@Html.ActionLink("Profile", "Profile", "Home")</li>
                            <li>@Html.ActionLink("SignOut", "SignOut", "Home")</li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">                    
                    @Html.Partial("TweetUpdate",Model.MyTweet)
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    @Html.Partial("TweetList", Model.TweetFollowed)
                </div>
            </div>
        </div>
    </div>
    <!-- /#page-content-wrapper -->
</div>