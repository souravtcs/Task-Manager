    @Html.ActionLink("Create New", "Create")
</p>*@
<div style="margin:10px;">
    <h3>List of your tweets:</h3>
</div>
<table class="table">
    <tr>
        @*<th>
            @Html.DisplayNameFor(model => model.UserId)
        </th>*@
        <th>
            @Html.DisplayNameFor(model => model.TweetMessage)
        </th>
        @*<th>
            @Html.DisplayNameFor(model => model.isActive)
        </th>*@
        <th>
            @Html.DisplayNameFor(model => model.CreatedOn)
        </th>
        @*<th>
            @Html.DisplayNameFor(model => model.LastModifiedOn)
        </th>*@
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        @*<td>
            @Html.DisplayFor(modelItem => item.UserId)
        </td>*@
        <td>
            @Html.DisplayFor(modelItem => item.TweetMessage)
        </td>
        @*<td>
            @Html.DisplayFor(modelItem => item.isActive)
        </td>*@
        <td>
            @Html.DisplayFor(modelItem => item.CreatedOn)
        </td>
        @*<td>
            @Html.DisplayFor(modelItem => item.LastModifiedOn)
        </td>*@
        <td>
            @Html.ActionLink("Edit", "EditTweet", new { id = item.Id }) |
            @*@Html.ActionLink("Details", "Details", new { id=item.Id }) |*@
            @Html.ActionLink("Delete", "DeleteTweet", new { id = item.Id }, new { onclick = "return confirm('Are you sure you wish to delete this tweet?');" })
        </td>
    </tr>
}

</table>
